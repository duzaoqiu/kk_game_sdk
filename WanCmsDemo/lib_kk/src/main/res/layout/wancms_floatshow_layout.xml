<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/float_bottom"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/float_ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/float_ll_bottom"
            android:alpha="0.95"
            android:background="@color/common_white"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <RelativeLayout
                android:id="@+id/float_bottom_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/wancms_floatimg_yonghu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/wancms_yonghu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wancms_floatimg_yonghu"
                    android:layout_centerHorizontal="true"
                    android:text="@string/float_user"
                    android:textColor="@color/black"/>

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/float_bottom_gift"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/wancms_floatimg_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/wancms_liwu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wancms_floatimg_gift"
                    android:layout_centerHorizontal="true"
                    android:text="@string/float_gift"
                    android:textColor="@color/black"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/float_bottom_kefu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/wancms_floatimg_kefu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/wancms_kefu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wancms_floatimg_kefu"
                    android:layout_centerHorizontal="true"
                    android:text="@string/float_kefu"
                    android:textColor="@color/black"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/float_bottom_exit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/wancms_floatimg_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/wancms_tuichu"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wancms_floatimg_exit"
                    android:layout_centerHorizontal="true"
                    android:text="@string/float_exit"
                    android:textColor="@color/black"/>

            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/float_bottom_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/wancms_floatimg_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/wancms_wenzhang"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wancms_floatimg_message"
                    android:layout_centerHorizontal="true"
                    android:text="@string/float_message"
                    android:textColor="@color/black"/>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/float_ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:alpha="0.95"
            android:background="@color/common_white"
            android:orientation="horizontal"
            android:paddingTop="10dp">


            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/float_bottom_gonggao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/wancms_floatimg_gonggao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/wancms_gonggao"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wancms_floatimg_gonggao"
                    android:layout_centerHorizontal="true"
                    android:text="@string/float_gonggao"
                    android:textColor="@color/black"/>

            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/float_bottom_record"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/wancms_floatimg_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/wancms_congzhi"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wancms_floatimg_record"
                    android:layout_centerHorizontal="true"
                    android:text="@string/float_record"
                    android:textColor="@color/black"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/float_ll_top"
            android:background="@color/orange"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >


            <TextView
                android:id="@+id/float_tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="用户："
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/float_tv_ptb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/float_tv_username"
                android:layout_marginLeft="100dp"
                android:text="平台币："
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/float_tv_ptbnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/float_tv_username"
                android:layout_toRightOf="@+id/float_tv_ptb"
                android:text="0.00"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/float_tv_djq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/float_tv_username"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/float_tv_ptbnumber"
                android:text="平台币："
                android:textColor="@color/white"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/float_tv_djqnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/float_tv_username"
                android:layout_toRightOf="@+id/float_tv_djq"
                android:text="0.00"
                android:textColor="@color/white"
                android:visibility="gone"/>


        </RelativeLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/float_ll_top"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/wancms_fload"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/float_left"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/float_left_rl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:paddingTop="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/float_left_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/wancms_fload"/>

            <TextView
                android:id="@+id/float_left_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/float_left_icon"
                android:text="用户名"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/float_left_ptb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/float_left_username"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/float_left_icon"
                android:text="平台币:"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/float_left_ptbnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/float_left_username"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/float_left_ptb"
                android:text="0.00"
                android:textColor="@color/white"/>

            <TextView

                android:id="@+id/float_left_djq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/float_left_ptb"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/float_left_icon"
                android:text="代金券:"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/float_left_djqnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/float_left_ptb"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/float_left_djq"
                android:text="0.00"
                android:textColor="@color/white"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/float_left_rl_top"
            android:alpha="0.95"
            android:background="@color/common_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/common_white"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <RelativeLayout
                    android:id="@+id/float_left_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/wancms_floatimgleft_yonghu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/wancms_yonghu"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wancms_floatimgleft_yonghu"
                        android:layout_centerHorizontal="true"
                        android:text="@string/float_user"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/float_left_gonggao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/wancms_floatimgleft_gonggao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/wancms_gonggao"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wancms_floatimgleft_gonggao"
                        android:layout_centerHorizontal="true"
                        android:text="公告-----"
                        android:textColor="@color/black"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/common_white"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <RelativeLayout
                    android:id="@+id/float_left_kefu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/wancms_floatimgleft_kefu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/wancms_kefu"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wancms_floatimgleft_kefu"
                        android:layout_centerHorizontal="true"
                        android:text="@string/float_kefu"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/float_left_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/wancms_floatimgleft_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/wancms_wenzhang"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wancms_floatimgleft_message"
                        android:layout_centerHorizontal="true"
                        android:text="@string/float_message"
                        android:textColor="@color/black"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/common_white"
                android:orientation="horizontal"
                android:paddingTop="10dp">


                <RelativeLayout
                    android:id="@+id/float_left_exit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/wancms_floatimgleft_exit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/wancms_tuichu"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wancms_floatimgleft_exit"
                        android:layout_centerHorizontal="true"
                        android:text="@string/float_exit"
                        android:textColor="@color/black"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/float_left_record"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/wancms_floatimgleft_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/wancms_congzhi"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wancms_floatimgleft_record"
                        android:layout_centerHorizontal="true"
                        android:text="@string/float_record"
                        android:textColor="@color/black"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/float_close"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/float_bottom"
        android:layout_toRightOf="@+id/float_left"/>


</RelativeLayout>
