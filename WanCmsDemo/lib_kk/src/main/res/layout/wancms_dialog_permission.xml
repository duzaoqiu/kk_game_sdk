<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white">

    <ImageView
        android:id="@+id/wancms_dialog_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        
        android:src="@drawable/wancms_login"/>

    <TextView
        android:id="@+id/dialog_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wancms_dialog_img"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="10dp"
        android:text="为了让您享受更完善的服务，请在应用权限管理中给予我们悬浮窗使用权限"
        android:textColor="@color/black"
        android:textSize="17dp"/>

    <View
        android:id="@+id/dialog_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dialog_hint"
        android:layout_marginTop="30dp"
        android:background="@color/gray_textcolor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/dialog_line"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_hint"
            android:background="@color/gray_textcolor"/>
        <TextView
            android:id="@+id/dialog_remind"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="不提醒"
            android:textColor="@color/black"/>
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_hint"
            android:background="@color/gray_textcolor"/>
        <TextView
            android:id="@+id/dialog_determine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="去设置"
            android:textColor="@color/orange"/>
    </LinearLayout>

</RelativeLayout>